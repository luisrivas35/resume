
    <style>
        .error-page {
            background: url("/assets/imgs/jpg/devops.jpg") no-repeat center center;
            background-size: cover;
            color: white;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            text-align: center;
        }
        
        .error-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6); 
        }
        
        .error-content {
            position: relative;
            z-index: 1;
        }

        .error-code {
            font-size: 10rem;
            font-weight: bold;
        }

        .error-message {
            font-size: 1.5rem;
        }

        .error-description {
            margin: 20px 0;
            font-size: 1.25rem;
        }

        .btn-home {
            font-size: 1rem;
            padding: 10px 20px;
        }
    </style>
<div class="error-page">
        <div class="error-content">
            <div class="error-code"><%= errorCode %></div>
            <div class="error-message"><%= errorTitle %></div>
            <div class="error-description"><%= errorMessage %></div>
            <a href="/" class="btn btn-primary btn-home">Go to Homepage</a>
        </div>
    </div>
